<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_purchase_order_info_form_inherit" model="ir.ui.view">
        <field name="name">Purchase Order Line supplier Price</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <button name="get_supplier_minimum_product_price"
                        type="object"
                        icon="fa-money"
                        class="oe_edit_only"
                        attrs="{'invisible': [('price_unit', '!=', 0.0)]}"
                        string="Get Supplier Price"/>
            </xpath>
            <field name="product_qty" position="after">
                <field name="product_moq"/>
            </field>
        </field>
    </record>

</odoo>
