<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <record id="view_product_packaging_search" model="ir.ui.view">
       <field name="name">product.packaging.search.delivery</field>
        <field name="model">product.packaging</field>
        <field name="arch" type="xml">
            <search string="Picking Lists">
              <filter
               string="Extenal Packaging"
                name="shipping"
                domain="[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]]"
                help="Extenal Shipping Packaging"/>
               <group expand="0" string="Group By">
                      <filter string="Carrier" domain="[]" context="{'group_by':'package_carrier_type'}"/>
                </group>
            </search>
          </field>
      </record>


    <record model="ir.ui.view" id="product_packaging_form_view">
        <field name="name">product.packaging.form.delivery</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="product.product_packaging_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty']/../.." position="after">
              <div><b>NOTE:</b>The Max weight unit Kilogram<b>(kg)</b> and  dimension unit  centimeter<b>(cm)</b> for API-UoM[KG] and inch<b>(in)</b> for  API-UoM [LB].
              </div>
             <notebook>
               <page name='product_tmpl_ids' string='Template'>
                 <field name="product_tmpl_ids"/>
               </page>
             </notebook>
            </xpath>
            <field name="qty" position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>
        </field>
    </record>
    <record model="ir.ui.view" id="product_packaging_delivery_form">
        <field name="name">product.packaging.form.delivery</field>
        <field name="model">product.packaging</field>
        <field name="inherit_id" ref="delivery.product_packaging_delivery_form"/>
        <field name="arch" type="xml">
            <field name="qty"
                position="after">
                <field
                    name="cover_amount_option"
                    attrs="{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}"/>
                <field
                    name="cover_amount"
                    attrs="{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}"/>
            </field>
            <field name="shipper_package_code"
                position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>
             <field name="height" position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>
             <field name="width" position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>
             <field name="length" position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>
             <field name="max_weight" position="attributes">
                 <attribute name="attrs">{'required':[('package_carrier_type','not in', ['fixed', 'base_on_rule','none'])]}</attribute>
             </field>


        </field>
    </record>
     <menuitem id="menu_product_packaging"
            parent="sale.prod_config_main"
            string="Packagings" action="product.action_packaging_view"/>

</odoo>
