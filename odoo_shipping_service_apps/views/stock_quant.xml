<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quant_package_form_save" model="ir.ui.view">
        <field name="name">stock.quant.package.form</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="delivery.view_quant_package_form_save"/>
        <field name="arch" type="xml">
              <xpath expr="//footer/button[@name='write']" position="attributes">
                <attribute name="name">wk_write</attribute>
              </xpath>
                <xpath expr="//group[1]" position="after">
                    <group name='amount'>
                      <group>
                        <field name='cover_amount'  invisible="context.get('no_cover_amount',True)"/>
                      </group>
                      <group>
                        <field name='description'  invisible="context.get('no_description',True)"/>
                      </group>
                      <group>
                        <field name='height'  invisible="context.get('no_height',True)"/>
                      </group>
                      <group>
                        <field name='width'  invisible="context.get('no_width',True)"/>
                        <field name='length'  invisible="context.get('no_length',True)"/>
                      </group>
                    </group>
                </xpath>
        </field>
    </record>

	 <record model="ir.ui.view" id="view_quant_package_tree">
        <field name="name">stock.quant.package.tree</field>
        <field name="model">stock.quant.package</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Package"  decoration-muted="packaging_id" decoration-danger="not packaging_id" >
                <field name="name"/>
                <field name="packaging_id"/>
               <field name="shipping_weight"/>
               <field name="cover_amount"/>
                <field name="height"/>
                <field name="width"/>
                <field name="length"/>
            </tree>
        </field>
    </record>
</odoo>