<odoo>
    <data>

        <record id="view_website_form_inherit_tagmanager" model="ir.ui.view">
            <field name="name">website.form.inherit.tagmanager</field>
            <field name="model">website</field>
            <field name="inherit_id" ref="website.view_website_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='google_analytics_key']" position="before">
                    <field name="google_tagmanager_key" placeholder="GTM-XXXXXXX" string="Tag Manager Container Id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>