<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Purchase Order Modifier for including new fields in report for Vendor Instructions -->
    <template id="report_purchase_order_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[3]" position="replace">
            <td class="text-center">
                <span t-field="line.date_planned" t-options='{"format": "MM/dd/yyyy"}'/>
            </td>
        </xpath>
        <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="replace"></xpath>
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[1]" position="replace"></xpath>
        <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="before">
            <th>Internal Reference</th>
            <th>Vendor Code</th>
            <th>Vendor Product Name</th>
            <th>Additional Information</th>
        </xpath>
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[1]" position="before">
            <t t-set="vendor_info" t-value="line.get_additional_info()"/>
            <td>
                <span t-esc="line.product_id.default_code"/>
            </td>
            <td>
                <span t-esc="vendor_info['code'] if vendor_info and vendor_info['code'] else ''"/>
            </td>
            <td>
                <span t-esc="line.name.split(']')[-1]"/>
            </td>
            <td>
                <span t-esc="vendor_info['additional_info'] if vendor_info and vendor_info['additional_info'] else ''"/>
            </td>
        </xpath>
    </template>

    <!-- RFQ Modifier for including new fields in report for Vendor Instructions -->
    <template id="report_purchase_rfq_inherit" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[2]" position="replace">
            <td class="text-center">
                <span t-field="order_line.date_planned" t-options='{"format": "MM/dd/yyyy"}'/>
            </td>
        </xpath>
        <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="replace"></xpath>
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[1]" position="replace"></xpath>
        <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="before">
            <th>Internal Reference</th>
            <th>Vendor Code</th>
            <th>Vendor Product Name</th>
            <th>Additional Information</th>
        </xpath>
        <xpath expr="//table[@class='table table-condensed']/tbody/tr/td[1]" position="before">
            <t t-set="vendor_info" t-value="order_line.get_additional_info()"/>
            <td>
                <span t-esc="order_line.product_id.default_code"/>
            </td>
            <td>
                <span t-esc="vendor_info['code'] if vendor_info and vendor_info['code'] else ''"/>
            </td>
            <td>
                <span t-esc="order_line.name.split(']')[-1]"/>
            </td>
            <td>
                <span t-esc="vendor_info['additional_info'] if vendor_info and vendor_info['additional_info'] else ''"/>
            </td>
        </xpath>
    </template>

</odoo>