<?xml version="1.0" encoding="utf-8" ?>
<odoo>

 <!-- Custom -->
<template id="custom_snippet_embed" name="HTMl Block" >
      <section class="custom-snippet-embed section-md">
          <p>Embed HTML here</p>           
      </section>
</template>

 <!-- Custom -->
<template id="custom_snippet_2_column" name="2 Column (4*8)" >
      <section class="two_column_left">
       <div class="container">
            <div class="row">
  <div class="col-sm-4"><div class="oe_structure">
  <div class="shop-banner">
                <div class="banner-images">
                  <div class="banner-img">
                    <img class="img-fluid" src="/impacto_shop/static/src/img/ad-01.jpg" alt=""/>
                  </div>
                </div>
                <div class="banner-info">
                  <h3 class="title-lg f-weight-700 text-light mb-1">Month End Bonza</h3>
                  <label class="shop-lable lable-sm f-weight-400 mb-2 white-text">T-Shirt, Jeans, Shirt, Formal Wears &amp;<br/>
All Other Latest Items...</label>
                  <a class="shop-link link-xl text-light" href="#">Shop Now</a>
                </div>
              </div>
  </div></div>
  <div class="col-sm-8">
        <div class="oe_structure oe_empty">
  </div>
</div>        
</div>
</div>
      </section>
</template>
  
<template id="custom_snippet_2_column_right" name="2 Column (8*4)" >
      <section class="two_column_right">
       <div class="container">
            <div class="row">
  <div class="col-sm-8"><div class="oe_structure oe_empty"></div></div>
  <div class="col-sm-4"><div class="oe_structure oe_empty">
              <div class="shop-banner">
                <div class="banner-images">
                  <div class="banner-img">
                    <img class="img-fluid" src="/impacto_shop/static/src/img/ad-01.jpg" alt=""/>
                  </div>
                </div>
                <div class="banner-info">
                  <h3 class="title-lg f-weight-700 text-light mb-1">Month End Bonza</h3>
                  <label class="shop-lable lable-sm f-weight-400 mb-2 white-text">T-Shirt, Jeans, Shirt, Formal Wears &amp;<br/>
All Other Latest Items...</label>
                  <a class="shop-link link-xl text-light" href="#">Shop Now</a>
                </div>
              </div>  
  </div>
</div>
</div>        
</div>
      </section>
</template>
  

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
  <xpath expr="//div[@id='snippet_effect']/div[contains(@class, 'o_panel_body')]/t" position="before">
    <t t-snippet="theme_impacto.custom_snippet_embed"
         t-thumbnail="/theme_impacto/static/src/img/snippets/effect/01.jpg"/>
    <t t-snippet="theme_impacto.custom_snippet_2_column"
         t-thumbnail="/theme_impacto/static/src/img/snippets/effect/01.jpg"/>
    <t t-snippet="theme_impacto.custom_snippet_2_column_right"
         t-thumbnail="/theme_impacto/static/src/img/snippets/effect/01.jpg"/>
  </xpath>
</template> 
</odoo>